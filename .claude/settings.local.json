{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(timeout 120 npm run typecheck)",
      "Bash(timeout 600 npm run test)",
      "Bash(timeout 600 npm run test:*)",
      "Bash(timeout 120 npm run lint:fix)",
      "Bash(timeout 600 npm run db:*)",
      "Bash(timeout 60 npm run next-typesafe-url)",
      "Bash(cat:*)",
      "Bash(timeout 60 npm run dev)",
      "Bash(sed:*)",
      "Bash(rg:*)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_console_messages",
      "mcp__playwright__browser_wait_for",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_network_requests",
      "mcp__playwright__browser_hover",
      "mcp__playwright__browser_resize",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_press_key",
      "mcp__playwright__browser_evaluate",
      "mcp__playwright__browser_close",
      "mcp__playwright__browser_navigate_back",
      "Bash(ls:*)",
      "mcp__Ref__ref_search_documentation",
      "mcp__Ref__ref_read_url",
      "Bash(npm run lint)",
      "Bash(dir:*)",
      "Bash(mkdir:*)",
      "Bash(for file in \"src/components/ui/form/index.tsx\" \"src/components/ui/form/form-components/submit-button.tsx\" \"src/components/ui/form/field-components/text-field.tsx\" \"src/components/ui/form/field-components/field-error.tsx\" \"src/components/ui/form/field-components/field-item.tsx\" \"src/app/(app)/bobbleheads/add/components/add-item-form-client.tsx\")",
      "Bash(do [ -f \"$file\" ])",
      "Bash(echo \"$file exists\")",
      "Bash(echo:*)",
      "Bash(done)",
      "Bash(tree:*)",
      "Bash(for:*)",
      "Bash(do if [ -f \"$file\" ])",
      "Bash(then echo \"$file exists\")",
      "Bash(else echo \"$file does not exist\")",
      "Bash(fi)",
      "Bash(grep:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm install:*)",
      "Bash(npx playwright test:*)",
      "Bash(npm run format:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python \".claude\\hooks\\validate_agent_output.py\""
          },
          {
            "type": "command",
            "command": "python \".claude\\hooks\\orchestration_tracker.py\""
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \".claude\\hooks\\orchestration_quality_gates.py\""
          },
          {
            "type": "command",
            "command": "python \".claude\\hooks\\orchestration_tracker.py\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "echo ðŸ“‹ Reminder: Follow agent prompt constraints exactly. Check .claude/memory/orchestration-standards.md for requirements."
          }
        ]
      }
    ]
  },
  "outputStyle": "default"
}
