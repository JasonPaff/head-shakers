# Test Environment Configuration
# Copy this file to .env.test and update values as needed

# Test Database URL - Use either:
# 1. Local Docker container (recommended)
DATABASE_URL_TEST=postgresql://test_user:test_password@localhost:5433/headshakers_test

# 2. Neon test branch (alternative)
# DATABASE_URL_TEST=postgresql://user:pass@host/db_test

# 3. Testcontainers (will be set automatically when using test containers)
# DATABASE_URL_TEST will be dynamically set by testcontainers

# Test configuration
NODE_ENV=test
SKIP_ENV_VALIDATION=true

# Mock external services in tests
CLERK_SECRET_KEY=test_clerk_secret
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=test_clerk_pk
CLOUDINARY_CLOUD_NAME=test_cloudinary
CLOUDINARY_API_KEY=test_api_key
CLOUDINARY_API_SECRET=test_api_secret
ABLY_API_KEY=test_ably_key
REDIS_URL=redis://localhost:6379/1
RESEND_API_KEY=test_resend_key